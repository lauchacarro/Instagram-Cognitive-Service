<div class="row" style="margin-bottom:15px;min-height:40px">
    <div class="col-1" style="flex: 0 0 1%;">
        <figure class="image is-32x32 zero-margin" style="display: inline-block;">
            <img style="border-radius: 99px;" src="https://i.postimg.cc/xTRmVt0V/computer-vision.png" />
        </figure>
    </div>
    <div class="col-3">
        <span style="font-size: 0.9rem; font-weight: bold;">@Title </span>
        @if (WithConfidence)
        {
            <span style="font-size: 0.9rem;">with </span>
            <span style="font-size: 0.9rem;color:#0065B3;">#confidence </span>
        }
        <span style="font-size: 0.9rem;color: #@SubTitle">@SubTitle</span>
    </div>
    <div class="col-1">
        <figure class="image is-32x32 zero-margin" style="display: inline-block;">
            <img src=@ImageUrl />
        </figure>
    </div>
</div>


@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string SubTitle { get; set; }
    [Parameter]
    public string ImageUrl { get; set; }
    [Parameter]
    public bool WithConfidence { get; set; }

    [Parameter]
    public bool Color { get; set; }
}
