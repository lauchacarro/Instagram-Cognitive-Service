<BlazorScopedCss.ScopedStyle EmbeddedStylePath="InstagramNotification.razor.css"
                             Parent="this"
                             AfterInit="StateHasChanged"
                             @ref="scopedStyle" />

@if (scopedStyle?.IsComplete ?? false)
{
    <div class=@($"row {scopedStyle.CssScopedClasses("instagram-notification")}")>

        <div class=@($"col-1 {scopedStyle.CssScopedClasses("col-user")}")>

            <figure class=@($"image is-32x32 zero-margin {scopedStyle.CssScopedClasses("col-figure")}")>

                <img class=@scopedStyle.CssScopedClasses("col-user-figure-image") src="https://i.postimg.cc/xTRmVt0V/computer-vision.png" />

            </figure>
        </div>

        <div class="col-3">

            <span class=@scopedStyle.CssScopedClasses("font-size", "bold")>@Title </span>

            @if (WithConfidence)
            {
                <span class=@scopedStyle.CssScopedClasses("font-size")>with </span>

                <span class=@scopedStyle.CssScopedClasses("font-size") style="color:#0065B3;">#confidence </span>
            }

            <span class=@scopedStyle.CssScopedClasses("font-size") style="color: #@SubTitle">@SubTitle</span>

        </div>

        <div class="col-1">

            <figure class=@($"image is-32x32 zero-margin {scopedStyle.CssScopedClasses("col-figure")}")>

                <img src=@ImageUrl />

            </figure>

        </div>

    </div>

}

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string SubTitle { get; set; }
    [Parameter]
    public string ImageUrl { get; set; }
    [Parameter]
    public bool WithConfidence { get; set; }

    [Parameter]
    public bool Color { get; set; }

    BlazorScopedCss.ScopedStyle scopedStyle;

}
